{
  "name": "api",
  "version": "1.0.0",
  "description": "red store shopping store",
  "main": "index.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node app.js",
    "server": "nodemon app.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "install": "npm install",
    "postinstall": "client-install",
    "prebuild": "npm run build --prefix client"
  },
  "author": "bm_mayur",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.7",
    "razorpay": "^2.0.6",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
